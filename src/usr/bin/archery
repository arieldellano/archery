#!/usr/bin/env bash
 
# archery - Main Arch Linux installer script
#
# Copyright (c) 2020, Virgee LLC
#  Author: Ariel de Llano <arieldellano@virgee.com>

. ../share/archery/locale/us/archery.resources.us
. ../lib/lib.archery.log
. ../lib/lib.archery.signal


main() {
    log "Starting Arch Linux installation"
    trap abort SIGINT

    while [ 0 -lt 1 ]
    do
        sleep 1
    done
}

main